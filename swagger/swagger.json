{
  "swagger": "2.0",
  "info": {
     "description": "Go-Bookstore API Contract List",
     "version": "1.0.0",
     "title": "Go-Bookstore"
  },
  "tags": [
     {
        "name": "auth",
        "description": "API Authentication System"
     }
  ],
  "schemes": [
     "http"
  ],
  "paths": {
     "/auth/register": {
        "post": {
           "tags": [
              "auth"
           ],
           "summary": "Register New Account",
           "description": "",
           "consumes": [
              "application/json"
           ],
           "produces": [
              "application/json"
           ],
           "parameters": [
              {
                 "in": "body",
                 "name": "body",
                 "required": true,
                 "schema": {
                    "$ref": "#/definitions/Account"
                 }
              }
           ],
           "responses": {
              "200": {
                 "description": "Success",
                 "schema": {
                    "$ref": "#/definitions/RegisterResponse"
                 }
              },
              "500": {
                 "description": "Server Error",
                 "schema": {
                    "$ref": "#/definitions/ServerError"
                 }
              }
           }
        }
     },
     "/auth/login": {
        "post": {
           "tags": [
              "auth"
           ],
           "summary": "Login with Existed Account",
           "parameters": [
              {
                 "in": "body",
                 "name": "body",
                 "required": true,
                 "schema": {
                    "$ref": "#/definitions/User"
                 }
              }
           ],
           "responses": {
              "200": {
                 "description": "OK",
                 "schema": {
                    "$ref": "#/definitions/LoginSuccess"
                 }
              }
           }
        }
     }
  },
  "securityDefinitions": {
     "JWTAuth": {
        "type": "apiKey",
        "name": "bearer",
        "in": "header"
     }
  },
  "definitions": {
     "Account": {
        "type": "object",
        "properties": {
           "first_name": {
              "type": "string",
              "example": "john"
           },
           "last_name": {
              "type": "string",
              "example": "doe"
           },
           "email": {
              "type": "string",
              "example": "john.doe@gmail.com"
           },
           "age": {
              "type": "integer",
              "example": 10
           },
           "address": {
              "type": "string",
              "example": "JL.Sendiri Terus"
           },
           "password": {
              "type": "string",
              "example": "AiLopeYu"
           }
        }
     },
     "RegisterResponse": {
        "type": "object",
        "properties": {
           "user_id": {
              "type": "string",
              "example": "e3893dca-d433-412b-b9f7-41f1e8e77e88"
           },
           "email": {
              "type": "string",
              "example": "john.doe@gmail.com"
           },
           "registeredAt": {
              "type": "string",
              "example": "2020-08-10T02:01:24+00:00"
           }
        }
     },
     "ServerError": {
        "type": "object",
        "properties": {
           "message": {
              "type": "string"
           }
        }
     },
     "User": {
        "type": "object",
        "properties": {
           "email": {
              "type": "string",
              "example": "john.doe@gmail.com"
           },
           "password": {
              "type": "string",
              "example": "AiLopeYu"
           }
        }
     },
     "LoginSuccess": {
        "type": "object",
        "properties": {
           "user_id": {
              "type": "string"
           },
           "token_details": {
              "type": "object",
              "properties": {
                 "access_token": {
                    "type": "string"
                 },
                 "expiredAt": {
                    "type": "string"
                 }
              }
           }
        }
     }
  }
}